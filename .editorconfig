root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 2

[*.css]
indent_size = 4
tab_width = 4

[{*.ctp,*.hphp,*.inc,*.module,*.php,*.php4,*.php5,*.phtml}]
indent_size = 4
tab_width = 4

[{*.har,*.jsb2,*.jsb3,*.json,*.template,.babelrc,.eslintrc,.stylelintrc,bowerrc,composer.lock,jest.config}]
indent_size = 4
tab_width = 4

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml,ProductKonfigurator.html}]
indent_size = 4
tab_width = 4

[{*.markdown,*.md}]
indent_size = 4
tab_width = 4
